@page
@model Sejlklub21.Pages.Accounts.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    a:hover {
        text-decoration: none;
    }
</style>

@if (Model.Error)
{
    <span>@Model.ErrorMessage</span>
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input type="email" asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a asp-page="/Profiles/CreateProfile">
                    <input type="button" value="Sign Up" class="btn btn-light" />
                </a>
                <a asp-page="/Logins/ForgotAccount">
                    <input type="button" value="Forgot Password" class="btn btn-light" />
                </a>
            </div>
        </form>
    </div>
</div>