@page
@model Sejlklub21.Pages.Boats.CreateBookingModel
@{
}

<h1>Opret en reservation</h1>
<form method="post">
    @if (Model.PreExisting != null)
    {
    <div class="bg-info">Nogen har alerrade reservert denne båd fra @Model.PreExisting.Start til @Model.PreExisting.End</div>
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Booking.Journey.Start" class="control-label"></label>
        <input asp-for="Booking.Journey.Start" class="form-control" />
        <span asp-validation-for="Booking.Journey.Start" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.Journey.End" class="control-label"></label>
        <input asp-for="Booking.Journey.End" class="form-control" />
        <span asp-validation-for="Booking.Journey.End" class="text-danger"></span>
        @if (!Model.EndIsAfterStart)
        {
            <span class="text-danger">Slut tidspunktet skal være efter start.</span>
        }
    </div>
    <div class="form-group">
        <label asp-for="Booking.Journey.Route" class="control-label"></label>
        <input asp-for="Booking.Journey.Route" class="form-control" />
        <span asp-validation-for="Booking.Journey.Route" class="text-danger"></span>
    </div>
    <input type="submit" value="Opret" />
</form>