@page
@model Sejlklub21.Pages.Members.CreateMemberModel
@{
    ViewData["Title"] = "Create Member";
}

<style>
    a:hover {
        text-decoration: none;
    }
</style>

<h1>Create Member</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Member.Name" class="control-label"></label>
                <input asp-for="@Model.Member.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Email" class="control-label"></label>
                <input asp-for="@Model.Member.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Number" class="control-label"></label>
                <input asp-for="@Model.Member.Number" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Address" class="control-label"></label>
                <input asp-for="@Model.Member.Address" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="/Members/Index">
                    <input type="button" value="Cancel" class="btn btn-light"/>
                </a>
            </div>
        </form>
    </div>
</div>