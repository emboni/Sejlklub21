@page
@using Sejlklub21.Interfaces
@model Sejlklub21.Pages.Members.EditMemberModel
@{
    ViewData["Title"] = "Edit Member";
}

<style>
    table {
        width: 100%;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

    th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
    }

    td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

        td:nth-child(1) {
            text-align: center;
        }

        td:last-child {
            text-align: center;
        }

    a:hover {
        text-decoration: none;
    }
</style>

<h1>Edit Member</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Member.Id" class="form-control" />
            <input type="hidden" asp-for="@Model.Member.Admin" class="form-control" />
            <input type="hidden" asp-for="@Model.Member.ImageFileName" class="form-control" />
            <div class="form-group">
                <label asp-for="@Model.Member.Email" class="control-label"></label>
                <input type="email" asp-for="@Model.Member.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Password" class="control-label"></label>
                <input type="password" asp-for="@Model.Member.Password" value="@Model.Member.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Username" class="control-label"></label>
                <input asp-for="@Model.Member.Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Name" class="control-label"></label>
                <input asp-for="@Model.Member.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Number" class="control-label"></label>
                <input asp-for="@Model.Member.Number" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Member.Address" class="control-label"></label>
                <input asp-for="@Model.Member.Address" class="form-control" />
            </div>
            <br />
            <div>
                <table>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name
                        </th>
                        <th>

                        </th>
                    </tr>
                    @for (int i = 0; i < Model.boatTypeCatalog.GetAllTypes().Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.boatTypeCatalog.GetType(i).Id
                            </td>
                            <td>
                                @Model.boatTypeCatalog.GetType(i).Name
                            </td>
                            <td>
                                <input type="checkbox" asp-for="@Model.AllowedBools[i]" value="@Model.AllowedBools[i]" />
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="/Members/Index">
                    <input type="button" value="Undo" class="btn btn-light" />
                </a>
            </div>
        </form>
    </div>
</div>