@page
@model Sejlklub21.Pages.Blogs.CreateBlogPostModel
@{
    ViewData["Title"] = "Opret Blogindlæg";
}

<h1>Opret Blogindlæg</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Blog.Title" class="control-label">Titel</label>
                <input asp-for="@Model.Blog.Title" class="form-control"/>
                <span asp-validation-for="@Model.Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Blog.Date" class="control-label">Dato og Tidspunkt</label>
                <input asp-for="@Model.Blog.Date" class="form-control"/>
                <span asp-validation-for="@Model.Blog.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Blog.Content" class="control-label">Beskrivelse</label>
                <input asp-for="@Model.Blog.Content" class="form-control"/>
                <span asp-validation-for="@Model.Blog.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Blog.Picture" class="control-label">Billede</label>
                <input asp-for="@Model.Blog.Picture" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="index">Tilbage til liste</a>
</div>